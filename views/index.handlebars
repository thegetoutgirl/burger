<main>
    <center>


        <div class="container" style="color:blue">

            <div class="section">
                <div class="z-depth-1 grey lighten-4 row"
                    style="display: inline-block; padding: 32px 48px 0px 48px; border: 1px solid #EEE;">

                    <h2>On the menu!</h2>

                    <ul>
                        {{#each burgers}}
                        {{#unless devoured}}
                        <li> {{burger_name}}
                            <button class="burger-devoured" data-id="{{id}}" data-devoured="true">Chow time!</button>
                        </li>
                        {{/unless}}
                        {{/each}}
                    </ul>

                    <h2>Burgers you've eaten</h2>

                    <ul>
                        {{#each burgers}}
                        {{#if devoured}}
                        <li> {{burger_name}}
                            <button data-id="{{id}}" data-devoured="false">Trash Can!</button>
                        </li>
                        {{/if}}
                        {{/each}}
                    </ul>
<h2>Add a Burger</h2>
<form class="create-form">
  <div class="form-group">
    <label for="newburger">Burger Name:</label>
    <input type="text" id="newburger" name="burger_name">
  </div>

  <button type="submit">Add to the menu</button>
</form>
                </div>
            </div>
        </div>
</main>